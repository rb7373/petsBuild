[md-header-picture]
  position relative
  width 100%
  height 0
  /* Simple trick to keep a 16:9 ratio on your background image (height=0;padding-bottom=56.25%) */
  padding-bottom 56.25%
  overflow hidden
  background-size 100% // 160%
  /* You can override this value if your picture has a weird ratio */
  background-position 50% 50%

[pt-scroll]
  position fixed
  top 0

/* A simple scale animation on float action button during scroll */
.main-fab
  position absolute
  left calc(100% - 70px)
  z-index 20
  transform scale(1,1)
  transition transform .1s ease-out
  &.hide
    transform scale(0,0)
    transition transform .1s ease-out

